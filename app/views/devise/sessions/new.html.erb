<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", model: @user %>
  <div class='form-wrap'>
    <div class="form">
      <h1 class='form-header-text'>
        登録情報を入力してください
      </h1>
      <div class="form-text">
        メールアドレス
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"半角英数字", autofocus: true %>
      <div class="form-text">
        パスワード
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
      <div class='regist-btn'>
        <%= f.submit "ログイン" ,class:"goal-btn" %>
      </div>
    </div>
  </div>
<% end %>
  <div class="return-btn">
    <%= link_to "戻る", root_path %>
  </div>
<%= render 'shared/footer'%>
