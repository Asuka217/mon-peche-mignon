<%= form_with model: @user, url: user_registration_path, class: 'registration-main',local: true do |f| %>


<div class='form-wrap'>
  <div class='form-header'>
    <h1 xlass='form-header-text'>
      登録情報を入力してください
    </h1>
  </div>
  <%= render "devise/shared/error_messages", model: @user %>
  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class='indispensable'>入力必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例）kuma217", maxlength:"40"%>
  </div>
  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class='indispensable'>入力必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"半角英数字", autofocus: true %>
  </div>
  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class='indispensable'>入力必須</span>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(再入力)</label>
      <span class='indispensable'>入力必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"パスワードを再入力" %>
  </div>

  <%# カテゴリー選択 %>
    <div class="user-detail">
      <div class="form">
        <div class="form-select">
          性別を選択してください
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"select-sex"}) %>
        <div class="form-select">
          年齢を選択してください
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"select-box", id:"select-age"}) %>
        <div class="form-select">
          現在の体型を教えてください
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:figure_id, Figure.all, :id, :name, {}, {class:"select-box", id:"select-figure"}) %>
      </div>
    </div>

  <%# //カテゴリー選択 %>

  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-btn" %>
  </div>

</div>
<% end %>

  <div class="return-btn">
    <%= link_to "TOP", root_path %>
  </div>
